#version 330 core

uniform struct Material
{
	sampler2D texture;
} material;

uniform struct Transform
{
	mat4 model;
	mat4 viewProjection;	
	mat3 normal;
	vec3 viewPosition;
} transform;

in Vertex 
{
	vec4  position;
	vec2  texcoord;
} Vert;

out vec4 color;

void main ()
{
    color = texture(material.texture, Vert.texcoord);
}