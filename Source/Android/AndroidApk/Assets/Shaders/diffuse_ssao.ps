precision mediump float;

varying vec4 v_color;
varying vec2 v_texcoords;
uniform sampler2D texture;

void main() 
{
    float delta = 0.001f;
	vec4 color = 0.5f * (texture2D(texture, v_texcoords + vec2(delta, 0.0f)) + texture2D(texture, v_texcoords - vec2(delta, 0.0f))) + texture2D(texture, v_texcoords);
	
    gl_FragColor = 0.5f * color * v_color;
}